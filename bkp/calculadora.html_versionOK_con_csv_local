    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const importBtn = document.getElementById('importBtn');
            const calcularBtn = document.getElementById('calcularBtn');
            const resultadoDiv = document.getElementById('resultado');
            const errorDiv = document.getElementById('error');
            const contenidoResultadoDiv = document.getElementById('contenidoResultado');
            const retroactivoBody = document.getElementById('retroactivoBody');
            const importStatus = document.getElementById('importStatus');
            const csvFileInput = document.getElementById('csvFileInput');

            let importedData = null;

            const formatCurrency = (value) => {
                return value.toLocaleString('es-AR', { style: 'currency', currency: 'ARS', minimumFractionDigits: 2 });
            };
            
            const showError = (message) => {
                errorDiv.textContent = message;
                errorDiv.classList.remove('hidden');
                contenidoResultadoDiv.classList.add('hidden');
                resultadoDiv.classList.remove('hidden', 'fade-in');
            };

            importBtn.addEventListener('click', () => {
                const file = csvFileInput.files[0];
                if (!file) {
                    importStatus.textContent = 'Por favor, selecciona un archivo .csv primero.';
                    importStatus.classList.add('text-red-600');
                    return;
                }

                importStatus.textContent = 'Procesando archivo...';
                
                Papa.parse(file, {
                    header: true,
                    skipEmptyLines: true,
                    complete: (results) => {
                        if (results.data && results.data.length > 0 && 'Mes' in results.data[0] && 'Valor Hora' in results.data[0] && 'Horas Trabajadas' in results.data[0]) {
                            importedData = results.data.map(row => ({
                                mes: row['Mes'],
                                valorHora: parseFloat(row['Valor Hora']) || 0,
                                horas: parseFloat(row['Horas Trabajadas']) || 0
                            }));
                            importStatus.textContent = '¡Archivo procesado con éxito!';
                            importStatus.classList.remove('text-red-600');
                            importStatus.classList.add('text-green-600');
                            calcularBtn.disabled = false;
                        } else {
                            importStatus.textContent = 'Error en el formato. Asegúrate de que el archivo .csv tenga las columnas correctas.';
                            importStatus.classList.remove('text-green-600');
                            importStatus.classList.add('text-red-600');
                        }
                    },
                    error: (err) => {
                        importStatus.textContent = 'No se pudo leer el archivo.';
                        importStatus.classList.remove('text-green-600');
                        importStatus.classList.add('text-red-600');
                    }
                });
            });

            calcularBtn.addEventListener('click', () => {
                if (!importedData) {
                    showError('Por favor, procesa un archivo primero.');
                    return;
                }

                const eneroData = importedData.find(d => d.mes && d.mes.toLowerCase() === 'enero');
                if (!eneroData || !eneroData.valorHora) {
                    showError('No se encontró el "Valor Hora" de Enero en los datos importados. Es necesario para el cálculo.');
                    return;
                }
                const valorHoraEneroBase = eneroData.valorHora;

                const opcionHorasSemanales = parseInt(document.getElementById('horasSemanales').value);
                if (opcionHorasSemanales === 0) {
                    showError('Por favor, seleccione el rango de horas semanales para calcular el bono.');
                    return;
                }
                
                errorDiv.classList.add('hidden');
                contenidoResultadoDiv.classList.remove('hidden');
                retroactivoBody.innerHTML = ''; 

                const AUMENTO_FEB_JUN = 0.035;
                const AUMENTO_MENSUAL = 0.01; // 1% for July, Aug, Sep

                // Calculate base rate for Feb-Jun
                const valorHoraBaseFebJun = valorHoraEneroBase * (1 + AUMENTO_FEB_JUN);
                
                // Calculate rates for July, August, September
                const valorHoraJulio = valorHoraBaseFebJun * (1 + AUMENTO_MENSUAL);
                const valorHoraAgosto = valorHoraJulio * (1 + AUMENTO_MENSUAL);
                const valorHoraSeptiembre = valorHoraAgosto * (1 + AUMENTO_MENSUAL);

                // Calculate retroactive payment
                let totalRetroactivo = 0;
                const adicionalPorHora = valorHoraEneroBase * AUMENTO_FEB_JUN;
                
                const monthsForRetro = ['febrero', 'marzo', 'abril', 'mayo', 'junio'];
                importedData.forEach(data => {
                    if (data.mes && monthsForRetro.includes(data.mes.toLowerCase()) && data.horas > 0) {
                        const adicionalMensual = adicionalPorHora * data.horas;
                        totalRetroactivo += adicionalMensual;

                        const row = `
                            <tr class="border-b border-gray-100">
                                <td class="p-2">${data.mes}</td>
                                <td class="p-2 font-mono text-center">${data.horas}</td>
                                <td class="p-2 font-mono text-xs">${formatCurrency(adicionalPorHora)}</td>
                                <td class="p-2 font-mono text-right text-green-700 font-semibold">${formatCurrency(adicionalMensual)}</td>
                            </tr>
                        `;
                        retroactivoBody.innerHTML += row;
                    }
                });

                // Calculate July salary
                const julioData = importedData.find(d => d.mes && d.mes.toLowerCase() === 'julio');
                const horasJulio = julioData ? julioData.horas : 0;
                const sueldoJulio = valorHoraJulio * horasJulio;

                // Determine bonus
                let bono = 0;
                switch (opcionHorasSemanales) {
                    case 1: bono = 4000; break;
                    case 2: bono = 7000; break;
                    case 3: bono = 10000; break;
                }

                // Calculate total payment for July
                const totalAPagar = sueldoJulio + totalRetroactivo + bono;

                // Display results
                document.getElementById('resSueldoJulio').textContent = formatCurrency(sueldoJulio);
                document.getElementById('resRetroactivo').textContent = formatCurrency(totalRetroactivo);
                document.getElementById('resBono').textContent = formatCurrency(bono);
                document.getElementById('resTotal').textContent = formatCurrency(totalAPagar);

                // Display projections
                document.getElementById('proyAgosto').textContent = formatCurrency(valorHoraAgosto);
                document.getElementById('proySeptiembre').textContent = formatCurrency(valorHoraSeptiembre);

                resultadoDiv.classList.remove('hidden');
                resultadoDiv.classList.add('fade-in');
            });
        });
    </script>
</body>
</html>

